#!/usr/bin/env bash
# Helper to ensure gradlew exists in this directory for CI checks.
set -e
if [ ! -f "./gradlew" ]; then
  cat > ./gradlew <<'EOS'
#!/usr/bin/env bash
set -e
echo "Workspace-level gradlew stub invoked with args: $*"
echo "No native Android project is present. This is expected for Expo-managed workflow."
exit 0
EOS
  chmod +x ./gradlew || true
fi
echo "Workspace-level gradlew ensured."
